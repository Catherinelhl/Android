<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#eeeeee"
                    android:layout_weight="1">
        <TextView
                android:id="@+id/tv_open"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:text="Open:"
                android:layout_margin="3sp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_high"
                android:minWidth="100dp"
                android:layout_toRightOf="@+id/tv_open"
                android:layout_width="wrap_content"
                android:text="High:"
                android:layout_margin="3sp"

                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_close"
                android:minWidth="100dp"
                android:layout_margin="3sp"
                android:layout_below="@+id/tv_open"
                android:layout_alignParentLeft="true"
                android:text="Close:"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_low"
                android:text="Low:"
                android:layout_margin="3sp"
                android:minWidth="100dp"
                android:layout_toRightOf="@+id/tv_close"
                android:layout_below="@+id/tv_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_volume"
                android:text="Volume:"
                android:minWidth="100dp"
                android:layout_margin="3sp"
                android:layout_toRightOf="@+id/tv_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_number"
                android:text="Number:"
                android:layout_margin="3sp"
                android:minWidth="100dp"
                android:layout_below="@+id/tv_volume"
                android:layout_toRightOf="@+id/tv_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_timer"
                android:text="Time:"
                android:layout_margin="3sp"
                android:minWidth="100dp"
                android:layout_below="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00000000"
            android:layout_weight="4"/>

    <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-20dp"
            android:layout_weight="1.5"/>

</LinearLayout>
